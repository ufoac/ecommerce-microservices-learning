# ==================== 基础设施自身配置 ====================
# 时区配置
TIMEZONE=Asia/Shanghai

# 镜像配置
MYSQL_IMAGE=swr.cn-north-4.myhuaweicloud.com/ddn-k8s/docker.io/mysql
MYSQL_VERSION=8.0.43
REDIS_IMAGE=swr.cn-north-4.myhuaweicloud.com/ddn-k8s/docker.io/redis
REDIS_VERSION=7.4.6
NACOS_IMAGE=swr.cn-north-4.myhuaweicloud.com/ddn-k8s/docker.io/nacos/nacos-server
NACOS_VERSION=v2.5.1
ROCKETMQ_IMAGE=swr.cn-north-4.myhuaweicloud.com/ddn-k8s/docker.io/apache/rocketmq
ROCKETMQ_VERSION=5.3.2
ROCKETMQ_CONSOLE_IMAGE=swr.cn-north-4.myhuaweicloud.com/ddn-k8s/docker.io/styletang/rocketmq-console-ng
ROCKETMQ_CONSOLE_VERSION=latest

# 健康检查配置
HEALTHCHECK_INTERVAL=30
HEALTHCHECK_TIMEOUT=10
HEALTHCHECK_RETRIES=3
HEALTHCHECK_START_PERIOD=60

# MySQL基础设施配置
MYSQL_ROOT_PASSWORD=root123456
MYSQL_DATABASE=ecommerce
MYSQL_USER=ecommerce
MYSQL_PASSWORD=ecommerce123
MYSQL_CHARSET=utf8mb4
MYSQL_COLLATION=utf8mb4_unicode_ci
MYSQL_PORT=3306
MYSQL_HOST_PORT=3306


# Redis基础设施配置
REDIS_PASSWORD=redis123456
REDIS_DATABASES=16
REDIS_PORT=6379
REDIS_HOST_PORT=6379

# Nacos基础设施配置
NACOS_MODE=standalone
NACOS_AUTH_ENABLE=true
NACOS_AUTH_TOKEN=SecretKey012345678901234567890123456789012345678901234567890123456789
NACOS_AUTH_IDENTITY_KEY=nacos-sever
NACOS_AUTH_IDENTITY_VALUE=security
NACOS_DB_NAME=nacos_config
NACOS_DB_USER=root
NACOS_DB_PASSWORD=root123456
NACOS_PORT=8848
NACOS_HOST_PORT=18848
NACOS_RPC_PORT=9848
NACOS_HOST_RPC_PORT=19848

# RocketMQ基础设施配置
ROCKETMQ_NAMESRV_PORT=9876
ROCKETMQ_NAMESRV_HOST_PORT=9876
ROCKETMQ_BROKER_PORT1=10909
ROCKETMQ_BROKER_HOST_PORT1=10909
ROCKETMQ_BROKER_PORT2=10911
ROCKETMQ_BROKER_HOST_PORT2=10911
ROCKETMQ_CONSOLE_PORT=8080
ROCKETMQ_CONSOLE_HOST_PORT=18080

# ==================== 应用自身配置 ====================
# 应用业务配置
APP_NACOS_NAMESPACE=public
APP_NACOS_GROUP=DEFAULT_GROUP
APP_DB_NAME=ecommerce
APP_REDIS_DATABASE=0

# 应用运行配置
LOG_LEVEL=DEBUG
MANAGEMENT_ENDPOINTS=health,info

# 端口配置
GATEWAY_PORT=28080
GATEWAY_HOST_PORT=28080
USER_SERVICE_PORT=28081
USER_SERVICE_HOST_PORT=28081
PRODUCT_SERVICE_PORT=28082
PRODUCT_SERVICE_HOST_PORT=28082
TRADE_SERVICE_PORT=28083
TRADE_SERVICE_HOST_PORT=28083

# JVM配置
GATEWAY_JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC
USER_SERVICE_JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC
PRODUCT_SERVICE_JAVA_OPTS=-Xms512m -Xmx1536m -XX:+UseG1GC
TRADE_SERVICE_JAVA_OPTS=-Xms512m -Xmx1536m -XX:+UseG1GC


# ==================== 应用的连接配置（易变更） ====================
# 服务连接地址
ENV_NACOS_SERVER_ADDR=nacos:8848
ENV_NACOS_USERNAME=nacos
ENV_NACOS_PASSWORD=nacos
ENV_DB_HOST=mysql
ENV_DB_PORT=3306
ENV_REDIS_HOST=redis
ENV_REDIS_PORT=6379